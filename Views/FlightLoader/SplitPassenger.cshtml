@model IList<AirlineWeb.Shared.Models.PassengerBWA>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Split Passenger";
}

<p>
    Split Passenger
</p>

<form asp-action="ProcessSplitPassenger">
    @if (Model != null && Model.Any())
    {
        @for (var i = 0; i < Model.Count; i++)
        {
            @Html.HiddenFor(m => m[i].Id)
            <div class="col-12 row">
                <div class="col-2">@Html.CheckBoxFor(m => m[i].Split)</div>
                <div class="col-2">@Html.DisplayFor(m => m[i].Salutation)</div>
                <div class="col-2">@Html.DisplayFor(m => m[i].FirstName)</div>
                <div class="col-2">@Html.DisplayFor(m => m[i].LastName)</div>
                <div class="col-2">@Model[i].BirthDate.ToShortDateString()</div>
                <div class="col-2"></div>
            </div>
            <br />
        }
        <div class="form-group">
            <input type="submit" value="Split" class="btn btn-primary" />
        </div>
    }
</form>
<div>
    <a asp-action="Reservations" class="btn btn-primary">Back to List</a>
</div>